<div class="product-wrapper">

  <p class="notice-text"><%= notice %></p>

  <div class="product-render">
    <%= render @product %>
  </div>

  <% if @product.items.attached? %>
    <div class="product-images-section">
      <% @product.items.each do |item| %>
        <%= image_tag item, alt: "Product Image", size:"100x100", class: "product-image" %>
      <% end %>
    </div>
  <% end %>

  <% if @product.invoice.attached? %>
    <div class="product-invoice-section">
      <h3 class="invoice-heading">Invoice:</h3>
      <%= tag.embed src: url_for(@product.invoice),
                    type: "application/pdf",
                    width: "600",
                    height: "400",
                    class: "invoice-embed" %>
    </div>
  <% end %>

  <div class="product-actions">
    <%= link_to "Edit", edit_product_path(@product), class: "btn edit-btn" %> |
    <%= link_to "Back", products_path, class: "btn back-btn" %>
    <%= button_to "Delete", @product, method: :delete, class: "btn delete-btn" %>
  </div>

</div>
