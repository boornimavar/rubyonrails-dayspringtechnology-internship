<div class="page-wrapper">
  <h1 class="page-title">Customers</h1>

  <% if notice %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <%= link_to "New Customer", new_customer_path, class: "btn btn-primary" %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr class="<%= 'inactive-row' unless customer.is_active %>">
          <td><%= customer.name %></td>
          <td><%= customer.email %></td>

          <td>
            <span class="status-badge <%= customer.is_active ? 'active' : 'inactive' %>">
              <%= customer.is_active ? 'Active' : 'Inactive' %>
            </span>
          </td>

          <td>
            <%= link_to "Show", customer, class: "btn btn-primary" %>
            <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-edit" %>
            <%= link_to "Delete", customer,
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
