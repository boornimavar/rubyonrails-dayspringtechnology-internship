<div class="form-card">
  <%= form_with(model: customer) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-input", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-input", required: true %>
    </div>

    
    

    
    <div>
      <%= f.label :profile, class: "form-label" %>
      <%= f.rich_text_area :profile, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.label :avatar, class: "form-label" %>
      <%= f.file_field :avatar, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>



  <% end %>
</div>
